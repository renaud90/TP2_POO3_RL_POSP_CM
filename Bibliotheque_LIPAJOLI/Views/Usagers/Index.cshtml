@model IEnumerable<Bibliotheque_LIPAJOLI.Models.Usager>

@{
    ViewData["Title"] = "Usagers";
}

<h1>Liste des usagers</h1>

<p>
    <a asp-action="Create">Créer un nouvel usager</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Trouver par nom: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Rechercher" class="btn btn-default" /> |
            <a asp-action="Index">Retour vers la liste complète</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NumSortParm"]">@Html.DisplayNameFor(model => model.NumAbonne)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Nom)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StatutSortParm"]">@Html.DisplayNameFor(model => model.Statut)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DefaillanceSortParm"]">@Html.DisplayNameFor(model => model.Defaillance)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumAbonne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Defaillance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumAbonne">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.NumAbonne">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.NumAbonne">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
